{
  "name": "knowledge-base-content",
  "version": "1.0.0",
  "description": "Content for the knowledge base to separate the code / logic from the content",
  "author": "MyCrypto",
  "repository": "https://github.com/MyCryptoHQ/knowledge-base-content.git",
  "license": "MIT",
  "dependencies": {
    "gray-matter": "^4.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^7.3.0",
    "moment": "^2.22.2",
    "remark-cli": "^5.0.0",
    "remark-frontmatter": "^1.3.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "slash": "^2.0.0"
  },
  "scripts": {
    "mdlint": "remark -q -f ."
  },
  "lint-staged": {
    "*.md": [
      "node update-modified-date.js",
      "remark -qf --no-stdout",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "node-fetch": "^2.6.1"
  }
}
